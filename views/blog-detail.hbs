{{#> layout currentPage="Blog"}}

<!-- BLOG DETAIL SECTION -->
<article class="blog-detail">
  <h1>{{blog.title}}</h1>

  <p>{{formatDateToWIB blog.postedAt}} | {{blog.author}}</p>

  <img src="{{blog.image}}" alt="blog-image" />

  <p class="mt-3">
    {{blog.content}}
  </p>
</article>

{{/layout}}